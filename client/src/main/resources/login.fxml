<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootElem" alignment="center" style="-fx-background-image: url(wall.png);" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.RegController">

    <TextField fx:id="login" maxWidth="200" promptText="Login">
        <VBox.margin>
            <Insets bottom="10" />
        </VBox.margin>
    </TextField>

    <PasswordField fx:id="password" maxWidth="200" promptText="Password">
        <VBox.margin>
            <Insets bottom="10" />
        </VBox.margin>
    </PasswordField>

    <Button onAction="#auth" prefWidth="200" text="Authorization">
        <opaqueInsets>
            <Insets />
        </opaqueInsets>
    </Button>
</VBox>
