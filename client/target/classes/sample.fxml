<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="client.Controller">
    <stylesheets>
        <URL value="@/css/style.css" />
    </stylesheets>

    <HBox fx:id="authPanel" prefHeight="0.0" prefWidth="532.0">
        <TextField fx:id="loginField" promptText="login" HBox.hgrow="ALWAYS" />
        <PasswordField fx:id="passwordField" onAction="#tryToAuth" promptText="password" HBox.hgrow="ALWAYS" />
        <Button minWidth="70" onAction="#tryToAuth" text="Auth" />
        <Button minWidth="70" onAction="#showRegWindow" text="Reg" />
    </HBox>

    <HBox VBox.vgrow="ALWAYS">

        <ListView fx:id="clientList" managed="false" minWidth="450" onMouseReleased="#clickClientlist" visible="false" />
    </HBox>


    <HBox fx:id="msgPanel" managed="false" prefHeight="0.0" prefWidth="46.0" visible="false">
        <TextField fx:id="textField" onAction="#sendMsg" promptText="input text" HBox.hgrow="ALWAYS" />
        <Button onAction="#sendMsg" text="Send" />
        <Button onAction="#openDiag" text="Add Dir" />
    </HBox>

</VBox>
